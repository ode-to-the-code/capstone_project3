<div class="container">
  <h3>My Subscriptions</h3>
  <% @user.subscriptions.each do |subscription| %>
    <div class="well">
      <p> Deed: <%= subscription.deed.name %></p>
      <p> Description: 
        <%= subscription.deed.description %> 
      </p>
    </div>
  <% end %>

  <h3>My Posted Deeds</h3>
  <% @deeds.each do |deed| %>
    <div class="well">
      <p> Name: <%= deed.name %></p>
      <p> Description: <br> <br> 
      <%= deed.description %> </p>
      
      <h3> Comments </h3>
      <% deed.comments.each do |comment| %>
           <p> <%= comment.body %></p>
           <p> <%= comment.user.name %></p>
      <% end %>
    </div>
  <% end %>
</div>